<!-- start: Content -->
<div id="content" class="col-lg-12">
	<div class="row">
		<div class="col-sm-12">
			<ol class="breadcrumb">
				<li><a href="">Bitcoin Agents</a></li>
				<li class="active">Enable Two Factor Authentication</li>
			</ol>
			<div class="row">
				<div class="col-lg-12">
					<div class="row">
						<div class="col-md-12">
							<div class="box">
								<div class="box-header">
									<h2><i class="fa fa-check"></i><%= I18n.t('authy_register_title', {:scope => 'devise'}) %></h2>
								</div>
								<div class="box-content no-padding">
									<%= enable_authy_form do %>
										<%= text_field_tag :country_code, '', :autocomplete => :off, :placeholder => I18n.t('devise.country'), :id => "authy-countries" %>
										<%= text_field_tag :cellphone, '', :autocomplete => :off, :placeholder => I18n.t('devise.cellphone'), :id => "authy-cellphone" %>
										<p><%= submit_tag I18n.t('enable_authy', {:scope => 'devise'}), :class => 'btn btn-primary' %></p>
									<% end %>										
								</div>
							</div>
						</div><!--/col-->
					</div><!--/row-->	
				</div><!--/col-->
			</div><!--/row-->
		</div><!--/row-->		
	</div><!--/col-->	
</div><!--/row-->				
</div>
<!-- end: Content -->

</div><!--/row-->		

</div><!--/container-->
